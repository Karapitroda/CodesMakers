<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Widget.CodeMakers.TextView.Heading"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_8sdp"
                android:id="@+id/title_tv"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/select_language"
                android:textSize="@dimen/_22sdp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_arabic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:cardBackgroundColor="@color/card_bg_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp"
                app:contentPadding="@dimen/_8sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.CodeMakers.TextView.Content"
                    android:layout_width="match_parent"
                    android:drawableRight="@drawable/ic_arrow_right_small"
                    android:fontFamily="@font/opensans_semibold"
                    android:id="@+id/arabic_tv"
                    android:padding="@dimen/_6sdp"
                    android:text="@string/language_arabic"
                    android:textAllCaps="true" />

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_english"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:cardBackgroundColor="@color/card_bg_color"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp"
                app:contentPadding="@dimen/_8sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.CodeMakers.TextView.Content"
                    android:id="@+id/english_tv"
                    android:layout_width="match_parent"
                    android:drawableRight="@drawable/ic_arrow_right_small"
                    android:fontFamily="@font/opensans_semibold"
                    android:padding="@dimen/_6sdp"
                    android:text="@string/language_english"
                    android:textAllCaps="true" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>
